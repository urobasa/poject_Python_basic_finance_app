{% extends 'base.html' %}

{% block title %}Главная{% endblock %}

{% block content %}
<h1>История операций</h1>

<div class="row mb-3">
    <div class="col">
        <div class="alert alert-success">Доход: {{ total_income }} ₽</div>
    </div>
    <div class="col">
        <div class="alert alert-danger">Расход: {{ total_expense }} ₽</div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Сумма</th>
            <th>Категория</th>
            <th>Счёт</th>
            <th>Описание</th>
        </tr>
    </thead>
    <tbody>
        {% for op in operations %}
        <tr>
            <td>{{ op.datetime.strftime('%Y-%m-%d %H:%M') }}</td>
            <td>{{ op.amount }} ₽</td>
            <td>{{ op.category.name }}</td>
            <td>{{ op.account.name }}</td>
            <td>{{ op.description or '' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="/operations/create" class="btn btn-primary">➕ Добавить операцию</a>
{% endblock %}
